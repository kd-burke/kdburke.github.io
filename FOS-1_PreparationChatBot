<script>
  function checkDensity() {
    const input = document.getElementById("studentInput").value.toLowerCase();
    const reply = document.getElementById("labPartnerReply");

    if (input.includes("mass") && input.includes("volume")) {
      reply.textContent = "âœ… Yup! It's mass divided by volume. We used grams and milliliters in lab, so the units are g/mL.";
    } else if (input.includes("weight")) {
      reply.textContent = "Sorta close! It's actually mass, not weight â€” and we divide it by volume.";
    } else if (input.includes("space") || input.includes("size")) {
      reply.textContent = "You're on the right track â€” density is about how much mass fits into a certain space!";
    } else if (input.trim().length < 3) {
      reply.textContent = "Try typing a bit more â€” even just a guess is okay!";
    } else {
      reply.textContent = "Hmm, not quite â€” density is the amount of mass in a given volume. Like how packed something is!";
    }
  }
</script>
